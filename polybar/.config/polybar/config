[colors]
; transparent ; background = #00000000
background = ${xrdb:color0:#FFF}
foreground = ${xrdb:color15:#FFF}
darkened = ${xrdb:color2:#FFF}
special = ${xrdb:color12:#FFF}
urgent = ${xrdb:color5:#FFF}

[bar/main]
override-redirect = true
wm-restack = i3

width = 50%
height = 32
offset-x = 20
offset-y = 10

border-left-size = 4
border-left-color = ${colors.special}

bottom = true

font-0 = knxt:size=16;1
font-1 = Noto\ Sans\ CJK\ JP:size=14;1
font-2 = Symbola:size=16;1

background = ${colors.background}
foreground = ${colors.foreground}

fixed-center = false

separator = "  "
padding = 1

modules-left = i3
modules-center = date
modules-right = pulseaudio-control battery mpd

[module/date]
type = internal/date

interval = 1.0

label = %date% : %time%

date = %a %Y-%m-%d%
time = %H:%M:%S

[module/pulseaudio-control]
type = custom/script
tail = true

exec = ~/.config/polybar/pulseaudio-control.bash listen
click-right = exec pavucontrol &
click-left = ~/.config/polybar/pulseaudio-control.bash togmute
click-middle = ~/.config/polybar/pulseaudio-control.bash next-sink
scroll-up = ~/.config/polybar/pulseaudio-control.bash up
scroll-down = ~/.config/polybar/pulseaudio-control.bash down
label-padding = 1
label-foreground = ${colors.foreground}

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

poll-interval = 1

format-full = üîã <label-full>
format-charging = üîã+ <label-charging>
format-discharging = üîã- <label-discharging>

[module/mpd]
type = internal/mpd

; Host where mpd is running (either ip or domain name)
; Can also be the full path to a unix socket where mpd is running.
host = 127.0.0.1
port = 6600

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 1

label-song = %artist% - %title%
label-offline = mpd is offline

format-playing = ‚èµ <label-song>
format-paused = ‚è∏ <label-song>
format-stopped = ‚èπ Stopped

[module/i3]
type = internal/i3

[bar/tray]
override-redirect = true
