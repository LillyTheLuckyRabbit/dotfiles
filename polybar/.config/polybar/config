[colors]
; transparent ; background = #00000000
background = ${xrdb:color0:#FFF}
foreground = ${xrdb:color15:#FFF}
darkened = ${xrdb:color2:#FFF}
special = ${xrdb:color12:#FFF}
urgent = ${xrdb:color5:#FFF}

[bar/main]
override-redirect = true
wm-restack = i3

width = 45%
height = 32
offset-x = 20
offset-y = 10

border-left-size = 4
border-left-color = ${colors.special}

bottom = true

font-0 = knxt:size=16;1
font-1 = Symbola:size=16;1

background = ${colors.background}
foreground = ${colors.foreground}

fixed-center = false

separator = "   "
padding = 3

modules-left = i3
modules-center = date
modules-right = volume battery mpd

[module/date]
type = internal/date

interval = 1.0

label = %date% : %time%

date = %a %Y-%m-%d%
time = %H:%M:%S

[module/volume]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-muted = 🔇 %percentage%%
ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

poll-interval = 1

format-full = 🔋 <label-full>
format-charging = 🔋+ <label-charging>
format-discharging = 🔋- <label-discharging>

[module/mpd]
type = internal/mpd

; Host where mpd is running (either ip or domain name)
; Can also be the full path to a unix socket where mpd is running.
host = 127.0.0.1
port = 6600

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 1

label-song = %artist% - %title%
label-offline = mpd is offline

format-playing = ⏵ <label-song>
format-paused = ⏸ <label-song>
format-stopped = ⏹ Stopped

[module/i3]
type = internal/i3

[bar/tray]
override-redirect = true
wm-restack = i3

width = 15%
height = 32
offset-x = 85%:-20
offset-y = 10

border-right-size = 4
border-right-color = ${colors.special}

bottom = true

font-0 = knxt:size=16;1
font-1 = Symbola:size=16;1

background = #00000000
foreground = ${colors.foreground}

fixed-center = true

separator = "   "
padding = 3

modules-left =
modules-center =
modules-right = fakeMod

tray-position = right
tray-background = ${colors.background}

[module/fakeMod]
type = custom/text
content =  
